<div class="bg-white">
  <div class="py-6 sm:px-6 lg:px-8 flex-1">
    <div class="px-4 py-6 sm:px-0">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">AI Analysis Results</h1>
            <p class="mt-2 text-sm text-gray-600">
              Analysis for <%= @document.title %>
            </p>
          </div>
          <div class="flex items-center space-x-4">
            <%= link_to @document, class: "btn-secondary" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Document
            <% end %>
          </div>
        </div>
      </div>

      <!-- AI Results -->
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <% if @cached %>
          <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm text-blue-700">This analysis was retrieved from cache (faster response)</span>
            </div>
          </div>
        <% end %>
        
        <% if @ai_result %>
          <% if @ai_result['summary'] %>
            <!-- Summary Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Summary</h2>
              <div class="prose max-w-none">
                <p class="text-gray-700"><%= simple_format(@ai_result['summary']) %></p>
              </div>
            </div>
          <% end %>

          <% if @ai_result['answer'] %>
            <!-- Answer Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Answer</h2>
              <div class="prose max-w-none">
                <p class="text-gray-700"><%= simple_format(@ai_result['answer']) %></p>
              </div>
              <% if @ai_result['confidence'] %>
                <div class="mt-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Confidence: <%= (@ai_result['confidence'] * 100).round %>%
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @ai_result['top_risks'] && @ai_result['top_risks'].any? %>
            <!-- Risks Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Top Risks</h2>
              <div class="space-y-4">
                <% @ai_result['top_risks'].each do |risk| %>
                  <div class="border-l-4 <%= risk['severity'] == 'critical' ? 'border-red-500 bg-red-50' : risk['severity'] == 'high' ? 'border-orange-500 bg-orange-50' : risk['severity'] == 'medium' ? 'border-yellow-500 bg-yellow-50' : 'border-green-500 bg-green-50' %> p-4">
                    <div class="flex items-center">
                      <h3 class="text-lg font-medium text-gray-900"><%= risk['risk'] %></h3>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= risk['severity'] == 'critical' ? 'bg-red-100 text-red-800' : risk['severity'] == 'high' ? 'bg-orange-100 text-orange-800' : risk['severity'] == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                        <%= risk['severity'].titleize %>
                      </span>
                    </div>
                    <p class="mt-2 text-gray-700"><%= risk['description'] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @ai_result['edits'] && @ai_result['edits'].any? %>
            <!-- Redlines Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Proposed Redlines</h2>
              <div class="space-y-4">
                <% @ai_result['edits'].each_with_index do |edit, index| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="text-lg font-medium text-gray-900">Edit #<%= index + 1 %></h3>
                      <div class="flex items-center space-x-2">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= edit['type'].titleize %>
                        </span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= edit['severity'] == 'high' ? 'bg-red-100 text-red-800' : edit['severity'] == 'medium' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                          <%= edit['severity'].titleize %>
                        </span>
                      </div>
                    </div>
                    <p class="text-sm text-gray-600 mb-2"><strong>Location:</strong> <%= edit['location'] %></p>
                    <% if edit['current_text'] %>
                      <div class="mb-2">
                        <p class="text-sm font-medium text-gray-700">Current text:</p>
                        <p class="text-sm text-gray-600 bg-red-50 p-2 rounded"><%= edit['current_text'] %></p>
                      </div>
                    <% end %>
                    <% if edit['suggested_text'] %>
                      <div class="mb-2">
                        <p class="text-sm font-medium text-gray-700">Suggested text:</p>
                        <p class="text-sm text-gray-600 bg-green-50 p-2 rounded"><%= edit['suggested_text'] %></p>
                      </div>
                    <% end %>
                    <p class="text-sm text-gray-700"><strong>Reason:</strong> <%= edit['reason'] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @ai_result['citations'] && @ai_result['citations'].any? %>
            <!-- Citations Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Citations</h2>
              <div class="space-y-2">
                <% @ai_result['citations'].each_with_index do |citation, index| %>
                  <div class="bg-gray-50 p-3 rounded-lg">
                    <p class="text-sm text-gray-600">
                      <strong>[<%= index + 1 %>]</strong> "<%= citation['quote'] %>"
                      <span class="text-xs text-gray-500">(Chunk <%= citation['chunk_id'] %>)</span>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500">No AI analysis results available.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>