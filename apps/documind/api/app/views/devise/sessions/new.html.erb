<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <div class="mx-auto h-12 w-auto text-center">
        <span class="text-3xl font-bold">
          <span class="text-blue-600">Docu</span>Mind
        </span>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Get unlimited document uploads and AI analysis
      </p>
    </div>

    <div class="mt-8">
      <!-- Google OAuth Button (always show for demo) -->
      <% if true || (ENV['GOOGLE_CLIENT_ID'].present? && ENV['GOOGLE_CLIENT_SECRET'].present?) %>
        <%= link_to user_google_oauth2_omniauth_authorize_path, 
            method: :post,
            class: "group relative w-full flex justify-center py-3 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mb-6 cursor-pointer" do %>
          <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        <% end %>

        <div class="relative mb-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300" />
          </div>
        </div>
      <% end %>

      <!-- Email/Password Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              placeholder: "Email address",
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              placeholder: "Password",
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, 
                  class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded cursor-pointer" %>
              <%= f.label :remember_me, "Remember me for 2 weeks", 
                  class: "ml-2 block text-sm text-gray-900 cursor-pointer hover:text-gray-700" %>
            </div>

            <div class="text-sm relative z-10">
              <%= link_to "Forgot password?", new_user_password_path, 
                  class: "font-medium text-blue-600 hover:text-blue-500 cursor-pointer relative z-10",
                  data: { turbo: false },
                  style: "pointer-events: auto;",
                  onclick: "console.log('Forgot password clicked'); return true;" %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", 
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
        </div>
      <% end %>

      <div class="text-center mt-6 relative z-10">
        <span class="text-sm text-gray-600">
          Don't have an account?
        </span>
        <br>
        <%= link_to "Sign up", new_user_registration_path, 
            class: "font-medium text-blue-600 hover:text-blue-500 cursor-pointer relative z-10 block mt-1",
            data: { turbo: false },
            style: "pointer-events: auto;",
            onclick: "console.log('Sign up clicked'); return true;" %>
      </div>

      <!-- Anonymous Usage Info -->
      <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">
              Try DocuMind without signing up
            </h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Anonymous users can upload 1 document and perform 3 AI actions. 
                 <%= link_to "Continue without account", root_path, 
                     class: "font-medium underline text-yellow-700 hover:text-yellow-600" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add visual feedback for remember me checkbox
  const rememberCheckbox = document.getElementById('user_remember_me');
  const rememberLabel = document.querySelector('label[for="user_remember_me"]');
  
  if (rememberCheckbox && rememberLabel) {
    rememberCheckbox.addEventListener('change', function() {
      if (this.checked) {
        rememberLabel.classList.add('text-blue-600', 'font-medium');
        rememberLabel.classList.remove('text-gray-900');
        console.log('Remember me enabled for 2 weeks');
      } else {
        rememberLabel.classList.remove('text-blue-600', 'font-medium');
        rememberLabel.classList.add('text-gray-900');
        console.log('Remember me disabled');
      }
    });
    
    // Make label clickable
    rememberLabel.addEventListener('click', function(e) {
      if (e.target === this) {
        rememberCheckbox.checked = !rememberCheckbox.checked;
        rememberCheckbox.dispatchEvent(new Event('change'));
      }
    });
  }
  
  // Add feedback for forgot password link
  const forgotPasswordLink = document.querySelector('a[href*="password"]');
  if (forgotPasswordLink) {
    forgotPasswordLink.addEventListener('click', function() {
      console.log('Forgot password link clicked');
    });
  }
});
</script>