<div class="py-6 sm:px-6 lg:px-8 flex-1">
  <div class="px-4 py-6 sm:px-0">
    <div class="border-b border-gray-200 dark:border-gray-700 pb-5 mb-8">
      <h1 class="text-3xl font-bold leading-tight text-gray-900 dark:text-white">Edit Profile</h1>
      <p class="mt-2 max-w-4xl text-sm text-gray-600 dark:text-gray-400">
        Update your account information and preferences.
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow-sm border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden transition-colors duration-200">
      <div class="px-6 py-8">
        <%= form_with model: @user, url: profile_path, method: :patch,
            html: { class: "space-y-8" } do |f| %>

          <% if @user.errors.any? %>
            <div class="rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-6 transition-colors duration-200">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-sm font-semibold text-red-800 dark:text-red-200">
                    There were <%= pluralize(@user.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-3 text-sm text-red-700 dark:text-red-300">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Profile Picture Section -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Profile Picture</h3>
            <div class="flex items-center space-x-6">
              <% if @user.avatar_url.present? %>
                <img class="h-20 w-20 rounded-full object-cover border-2 border-gray-200 dark:border-gray-600" src="<%= @user.avatar_url %>" alt="<%= @user.display_name %>">
              <% else %>
                <div class="h-20 w-20 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center border-2 border-gray-200 dark:border-gray-600">
                  <span class="text-2xl font-bold text-white">
                    <%= @user.display_name.first.upcase %>
                  </span>
                </div>
              <% end %>
              <div class="flex-1">
                <% if @user.oauth_user? %>
                  <div class="flex items-center space-x-2 mb-2">
                    <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">Google Account</p>
                  </div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    Profile picture is managed by your Google account and will update automatically.
                  </p>
                <% else %>
                  <div class="flex items-center space-x-2 mb-2">
                    <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">Email Account</p>
                  </div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    Profile pictures are not supported for email accounts yet. We're working on adding this feature.
                  </p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Personal Information Section -->
          <div class="space-y-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-3">Personal Information</h3>

            <!-- Name Field -->
            <div>
              <%= f.label :name, "Full Name", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.text_field :name,
                  class: "block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm transition-colors duration-200",
                  placeholder: "Enter your full name" %>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
                <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                This name will be displayed throughout the application.
              </p>
            </div>

            <!-- Email Field -->
            <div>
              <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.email_field :email,
                  class: "block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm transition-colors duration-200",
                  placeholder: "Enter your email address" %>
              <% if @user.oauth_user? %>
                <p class="mt-2 text-sm text-amber-600 dark:text-amber-400 flex items-center">
                  <svg class="w-4 h-4 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  Changing email for Google accounts may affect your ability to sign in.
                </p>
              <% else %>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                  You'll need to confirm your new email address if you change it.
                </p>
              <% end %>
            </div>
          </div>

          <!-- Theme Preferences Section -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 text-purple-600 dark:text-purple-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
              </svg>
              Theme Preferences
            </h3>
            <div class="space-y-4">
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Choose your preferred theme for the application. You can also toggle between themes using the button in the navigation bar.
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <!-- Light Theme Option -->
                <label class="theme-option">
                  <input type="radio" name="theme_preference" value="light" class="sr-only" aria-labelledby="light-theme-label">
                  <span class="flex flex-1">
                    <span class="flex flex-col">
                      <span id="light-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Light Theme</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                        </svg>
                        Clean and bright interface
                      </span>
                    </span>
                  </span>
                  <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 hidden" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </label>

                <!-- Dark Theme Option -->
                <label class="theme-option">
                  <input type="radio" name="theme_preference" value="dark" class="sr-only" aria-labelledby="dark-theme-label">
                  <span class="flex flex-1">
                    <span class="flex flex-col">
                      <span id="dark-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Dark Theme</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-indigo-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                        </svg>
                        Easy on the eyes in low light
                      </span>
                    </span>
                  </span>
                  <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 hidden" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </label>

                <!-- Auto Theme Option -->
                <label class="theme-option">
                  <input type="radio" name="theme_preference" value="auto" class="sr-only" aria-labelledby="auto-theme-label" checked>
                  <span class="flex flex-1">
                    <span class="flex flex-col">
                      <span id="auto-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Auto</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        Follows system preference
                      </span>
                    </span>
                  </span>
                  <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 hidden" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </label>
              </div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                Note: Theme changes are applied immediately and saved to your browser preferences.
              </p>
            </div>
          </div>

          <!-- Account Information Section -->
          <div class="bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-700 dark:to-blue-900/20 rounded-lg p-6 border border-gray-200 dark:border-gray-600 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
              </svg>
              Account Information
            </h3>
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-600 transition-colors duration-200">
                <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Account Type</dt>
                <dd class="mt-2">
                  <% if @user.oauth_user? %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 border border-green-200 dark:border-green-700">
                      <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                      </svg>
                      Google Account
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 border border-blue-200 dark:border-blue-700">
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                      </svg>
                      Email Account
                    </span>
                  <% end %>
                </dd>
              </div>
              <div class="bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-600 transition-colors duration-200">
                <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Member Since</dt>
                <dd class="mt-2 text-sm font-semibold text-gray-900 dark:text-white flex items-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  <%= @user.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row justify-end pt-8 border-t border-gray-200 dark:border-gray-700 space-y-4 sm:space-y-0 sm:space-x-4">
            <%= link_to "Cancel", profile_path,
                class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-400 dark:hover:border-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>

            <% unless @user.oauth_user? %>
              <%= link_to "Change Password", edit_user_registration_path,
                  class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-400 dark:hover:border-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
            <% end %>

            <%= f.submit "Update Profile",
                class: "inline-flex justify-center items-center px-8 py-3 border border-transparent rounded-lg shadow-md text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 cursor-pointer transform hover:scale-105" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>