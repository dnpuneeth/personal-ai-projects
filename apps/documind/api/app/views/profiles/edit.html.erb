<div class="max-w-3xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="border-b border-gray-200 pb-5 mb-8">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">Edit Profile</h1>
      <p class="mt-2 max-w-4xl text-sm text-gray-500">
        Update your account information and preferences.
      </p>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: @user, url: profile_path, method: :patch, 
            html: { class: "space-y-6" } do |f| %>
          
          <% if @user.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were <%= pluralize(@user.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Profile Picture Section -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Profile Picture</label>
            <div class="flex items-center space-x-4">
              <% if @user.avatar_url.present? %>
                <img class="h-16 w-16 rounded-full" src="<%= @user.avatar_url %>" alt="<%= @user.display_name %>">
              <% else %>
                <div class="h-16 w-16 rounded-full bg-blue-500 flex items-center justify-center">
                  <span class="text-xl font-bold text-white">
                    <%= @user.display_name.first.upcase %>
                  </span>
                </div>
              <% end %>
              <div>
                <% if @user.oauth_user? %>
                  <p class="text-sm text-gray-500">
                    Profile picture is managed by your Google account.
                  </p>
                <% else %>
                  <p class="text-sm text-gray-500">
                    Profile pictures are not supported for email accounts yet.
                  </p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Name Field -->
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, 
                class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Enter your full name" %>
            <p class="mt-1 text-xs text-gray-500">
              This name will be displayed throughout the application.
            </p>
          </div>

          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, 
                class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Enter your email address" %>
            <% if @user.oauth_user? %>
              <p class="mt-1 text-xs text-yellow-600">
                ⚠️ Changing email for Google accounts may affect your ability to sign in.
              </p>
            <% else %>
              <p class="mt-1 text-xs text-gray-500">
                You'll need to confirm your new email address if you change it.
              </p>
            <% end %>
          </div>

          <!-- Account Type Info -->
          <div class="bg-gray-50 rounded-md p-4">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Account Information</h3>
            <dl class="grid grid-cols-1 gap-2 sm:grid-cols-2">
              <div>
                <dt class="text-xs font-medium text-gray-500">Account Type</dt>
                <dd class="text-sm text-gray-900">
                  <% if @user.oauth_user? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-3 h-3 mr-1" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                      </svg>
                      Google Account
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Email Account
                    </span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-xs font-medium text-gray-500">Member Since</dt>
                <dd class="text-sm text-gray-900">
                  <%= @user.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-between pt-6 border-t border-gray-200">
            <%= link_to "Cancel", profile_path, 
                class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
            
            <div class="flex space-x-3">
              <% unless @user.oauth_user? %>
                <%= link_to "Change Password", edit_user_registration_path, 
                    class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
              <% end %>
              
              <%= f.submit "Update Profile", 
                  class: "bg-blue-600 border border-transparent rounded-md py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>