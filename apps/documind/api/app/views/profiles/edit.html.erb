<div class="py-6 sm:px-6 lg:px-8 flex-1">
  <div class="px-4 py-6 sm:px-0">
    <div class="border-b border-gray-200 dark:border-gray-700 pb-5 mb-8">
      <h1 class="text-3xl font-bold leading-tight text-gray-900 dark:text-white">Edit Profile</h1>
      <p class="mt-2 max-w-4xl text-sm text-gray-600 dark:text-gray-400">
        Update your account information and preferences.
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow-sm border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden transition-colors duration-200">
      <div class="px-6 py-8">
        <%= form_for @user, url: '/profile', method: :patch,
            html: { class: "space-y-8", multipart: true, data: { turbo: false }, id: "profile-edit-form" } do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <% if @user.errors.any? %>
            <div class="rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-6 transition-colors duration-200">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-sm font-semibold text-red-800 dark:text-red-200">
                    There were <%= pluralize(@user.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-3 text-sm text-red-700 dark:text-red-300">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Profile Picture Section -->
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Profile Picture</h3>
            <div class="flex items-start space-x-6">
              <!-- Profile Picture Display -->
              <div class="flex-shrink-0">
                <% if @user.has_profile_picture? %>
                  <div class="relative group">
                    <% if @user.profile_picture.attached? %>
                      <%= image_tag @user.profile_picture_thumbnail,
                          class: "h-24 w-24 rounded-full object-cover border-2 border-gray-200 dark:border-gray-600 cursor-pointer hover:scale-105 transition-transform duration-200",
                          alt: @user.display_name,
                          onclick: "openProfilePictureModal('#{url_for(@user.profile_picture)}', '#{@user.display_name}')" %>
                    <% else %>
                      <img class="h-24 w-24 rounded-full object-cover border-2 border-gray-200 dark:border-gray-600 cursor-pointer hover:scale-105 transition-transform duration-200"
                           src="<%= @user.avatar_url %>"
                           alt="<%= @user.display_name %>"
                           onclick: "openProfilePictureModal('#{@user.avatar_url}', '#{@user.display_name}')" %>
                    <% end %>

                    <!-- Hover overlay with view and remove options -->
                    <div class="absolute inset-0 bg-black bg-opacity-50 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                      <div class="flex space-x-2">
                        <button type="button"
                                onclick="openProfilePictureModal('<%= @user.profile_picture.attached? ? url_for(@user.profile_picture) : @user.avatar_url %>', '<%= @user.display_name %>')"
                                class="p-2 bg-blue-500 hover:bg-blue-600 text-white rounded-full transition-colors duration-200"
                                title="View full size">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                        </button>

                        <% if @user.profile_picture.attached? %>
                          <button type="button"
                                  onclick="confirmRemoveProfilePicture()"
                                  class="p-2 bg-red-500 hover:bg-red-600 text-white rounded-full transition-colors duration-200"
                                  title="Remove profile picture">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                          </button>
                        <% end %>
                      </div>
                    </div>

                    <!-- Profile picture info -->
                    <div class="mt-2 text-center">
                      <p class="text-xs text-gray-600 dark:text-gray-400">
                        <% if @user.profile_picture.attached? %>
                          Custom uploaded
                        <% else %>
                          From Google
                        <% end %>
                      </p>
                    </div>
                  </div>
                <% else %>
                  <div class="h-24 w-24 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center border-2 border-gray-200 dark:border-gray-600">
                    <span class="text-3xl font-bold text-white">
                      <%= @user.display_name.first.upcase %>
                    </span>
                  </div>
                  <div class="mt-2 text-center">
                    <p class="text-xs text-gray-600 dark:text-gray-400">No picture</p>
                  </div>
                <% end %>
              </div>

              <!-- Upload and Management Section -->
              <div class="flex-1">
                <div class="space-y-4">
                  <!-- File Upload -->
                  <div>
                    <label for="user_profile_picture" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                      Upload New Picture
                    </label>
                    <div class="flex items-center space-x-3">
                      <input type="file"
                             id="user_profile_picture"
                             name="user[profile_picture]"
                             accept="image/*"
                             class="block w-full text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 dark:file:bg-blue-900/20 dark:file:text-blue-300 hover:file:bg-blue-100 dark:hover:file:bg-blue-900/30 transition-colors duration-200">
                      <button type="submit"
                              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Upload
                      </button>
                    </div>
                    <% if @user.errors[:profile_picture].any? %>
                      <div class="mt-2 text-sm text-red-600 dark:text-red-400">
                        <% @user.errors[:profile_picture].each do |error| %>
                          <p><%= error %></p>
                        <% end %>
                      </div>
                    <% end %>
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                      Supported formats: PNG, JPEG, JPG, GIF. Max size: 5MB.
                    </p>
                  </div>

                  <!-- Profile Picture Actions -->
                  <% if @user.profile_picture.attached? %>
                    <div class="flex items-center space-x-3 pt-2">
                      <button type="button"
                              onclick="openProfilePictureModal('<%= url_for(@user.profile_picture) %>', '<%= @user.display_name %>')"
                              class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View Full Size
                      </button>

                      <button type="button"
                              onclick="confirmRemoveProfilePicture()"
                              class="inline-flex items-center px-3 py-2 border border-red-300 dark:border-red-600 text-sm font-medium rounded-md text-red-700 dark:text-red-300 bg-white dark:bg-gray-800 hover:bg-red-50 dark:hover:bg-red-900/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 dark:focus:ring-offset-gray-800 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Remove Picture
                      </button>
                    </div>
                  <% end %>

                  <!-- Account Type Info -->
                  <% if @user.oauth_user? %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <p class="text-sm text-gray-600 dark:text-gray-400">
                        Your Google profile picture will be used as a fallback if no custom picture is uploaded.
                      </p>
                    </div>
                  <% else %>
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                      </svg>
                      <p class="text-sm text-gray-600 dark:text-gray-400">
                        Upload a profile picture to personalize your account.
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Personal Information Section -->
          <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-3">Personal Information</h3>

            <!-- Hidden field to ensure form has data -->
            <%= f.hidden_field :id, value: @user.id %>

            <!-- Name Field -->
            <div>
              <%= f.label :name, "Full Name", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.text_field :name,
                  class: "block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm transition-colors duration-200",
                  placeholder: "Enter your full name" %>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
                <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                This name will be displayed throughout the application.
              </p>
            </div>

            <!-- Email Field (Read-only) -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Email Address</label>
              <div class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
                <%= @user.email %>
              </div>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 flex items-center">
                <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                Email address cannot be changed for security reasons.
              </p>
            </div>
          </div>

          <!-- Theme Preferences Section -->
          <div class="mt-6 bg-gray-50 dark:bg-gray-700 rounded-lg p-6 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 text-purple-600 dark:text-purple-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
              </svg>
              Theme Preferences
            </h3>
            <div class="space-y-4">
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Choose your preferred theme for the application. You can also toggle between themes using the button in the navigation bar.
              </p>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <!-- Light Theme Option -->
                <label class="theme-option cursor-pointer">
                  <input type="radio" name="theme_preference" value="light" class="sr-only" aria-labelledby="light-theme-label">
                  <div class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
                    <span class="flex flex-col">
                      <span id="light-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Light Theme</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                        </svg>
                        Clean and bright interface
                      </span>
                    </span>
                    <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 hidden" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </label>

                <!-- Dark Theme Option -->
                <label class="theme-option cursor-pointer">
                  <input type="radio" name="theme_preference" value="dark" class="sr-only" aria-labelledby="dark-theme-label">
                  <div class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
                    <span class="flex flex-col">
                      <span id="dark-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Dark Theme</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-indigo-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                        </svg>
                        Easy on the eyes in low light
                      </span>
                    </span>
                    <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 hidden" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </label>

                <!-- Auto Theme Option -->
                <label class="theme-option cursor-pointer">
                  <input type="radio" name="theme_preference" value="auto" class="sr-only" aria-labelledby="auto-theme-label" checked>
                  <div class="flex items-center justify-between p-4 border border-blue-200 dark:border-blue-600 rounded-lg bg-blue-50 dark:bg-blue-900/20 hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors duration-200">
                    <span class="flex flex-col">
                      <span id="auto-theme-label" class="block text-sm font-medium text-gray-900 dark:text-white">Auto</span>
                      <span class="mt-1 flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        Follows system preference
                      </span>
                    </span>
                    <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </label>
              </div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                Note: Theme changes are applied immediately and saved to your browser preferences.
              </p>
            </div>
          </div>

          <!-- Account Information Section -->
          <div class="mt-6 bg-gray-50 dark:bg-gray-700 rounded-lg p-6 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              Account Information
            </h3>
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-600 transition-colors duration-200">
                <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Account Type</dt>
                <dd class="mt-2 text-sm font-semibold text-gray-900 dark:text-white flex items-center">
                  <% if @user.oauth_user? %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 border border-green-200 dark:border-green-700">
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm6.707-9.293a1 1 0 00-1.414-1.414L9 12.586l-2.293-2.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l6-6z" clip-rule="evenodd" />
                      </svg>
                      Google Account
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 border border-blue-200 dark:border-blue-700">
                      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                      </svg>
                      Email Account
                    </span>
                  <% end %>
                </dd>
              </div>
              <div class="bg-white dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-600 transition-colors duration-200">
                <dt class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Member Since</dt>
                <dd class="mt-2 text-sm font-semibold text-gray-900 dark:text-white flex items-center">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  <%= @user.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row justify-end pt-6 border-t border-gray-200 dark:border-gray-700 space-y-4 sm:space-y-0 sm:space-x-4">
            <%= link_to "Cancel", profile_path,
