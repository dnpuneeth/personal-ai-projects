<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="border-b border-gray-200 pb-5 mb-8">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">My Profile</h1>
      <p class="mt-2 max-w-4xl text-sm text-gray-500">
        Manage your account information and view your usage statistics.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Profile Information -->
      <div class="lg:col-span-1">
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center">
              <% if @user.avatar_url.present? %>
                <img class="h-20 w-20 rounded-full" src="<%= @user.avatar_url %>" alt="<%= @user.display_name %>">
              <% else %>
                <div class="h-20 w-20 rounded-full bg-blue-500 flex items-center justify-center">
                  <span class="text-2xl font-bold text-white">
                    <%= @user.display_name.first.upcase %>
                  </span>
                </div>
              <% end %>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  <%= @user.display_name %>
                </h3>
                <p class="text-sm text-gray-500">
                  <%= @user.email %>
                </p>
                <% if @user.oauth_user? %>
                  <div class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-3 h-3 mr-1" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                      </svg>
                      Google Account
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="mt-6">
              <%= link_to "Edit Profile", profile_edit_path, 
                  class: "w-full bg-blue-600 border border-transparent rounded-md py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
            </div>
          </div>
        </div>

        <!-- Account Statistics -->
        <div class="mt-6 bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Account Statistics</h3>
            <dl class="grid grid-cols-1 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Total Documents</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @total_documents %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">AI Actions Performed</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @total_ai_actions %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Total Cost</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900">$<%= sprintf("%.2f", @total_cost) %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Member Since</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @user.created_at.strftime("%B %Y") %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="lg:col-span-2">
        <!-- Recent Documents -->
        <div class="bg-white shadow rounded-lg mb-6">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900">Recent Documents</h3>
              <%= link_to "View All", documents_path, 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium cursor-pointer" %>
            </div>
            <% if @recent_documents.any? %>
              <div class="space-y-3">
                <% @recent_documents.each do |document| %>
                  <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <% if document.is_pdf? %>
                          <svg class="h-8 w-8 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                          </svg>
                        <% elsif document.is_txt? %>
                          <svg class="h-8 w-8 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                          </svg>
                        <% else %>
                          <svg class="h-8 w-8 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">
                          <%= truncate(document.display_name, length: 40) %>
                        </p>
                        <p class="text-xs text-gray-500">
                          <%= document.created_at.strftime("%B %d, %Y") %>
                        </p>
                      </div>
                    </div>
                    <div class="flex items-center">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                        <%= case document.status
                            when 'completed' then 'bg-green-100 text-green-800'
                            when 'processing' then 'bg-yellow-100 text-yellow-800'
                            when 'failed' then 'bg-red-100 text-red-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= document.status.humanize %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-4">No documents uploaded yet.</p>
            <% end %>
          </div>
        </div>

        <!-- Recent AI Actions -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900">Recent AI Actions</h3>
              <%= link_to "View Cost", costs_path, 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium cursor-pointer" %>
            </div>
            <% if @recent_ai_events.any? %>
              <div class="space-y-3">
                <% @recent_ai_events.each do |event| %>
                  <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                          <svg class="h-4 w-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9.504 1.132a1 1 0 01.992 0l1.75 1a1 1 0 11-.992 1.736L10 3.152l-1.254.716a1 1 0 11-.992-1.736l1.75-1zM5.618 4.504a1 1 0 01-.372 1.364L5.016 6l.23.132a1 1 0 11-.992 1.736L3 7.723V8a1 1 0 01-2 0V6a.996.996 0 01.52-.878l1.734-.99a1 1 0 011.364.372zm8.764 0a1 1 0 011.364-.372l1.734.99A.996.996 0 0118 6v2a1 1 0 11-2 0v-.277l-1.254.145a1 1 0 11-.992-1.736L14.984 6l-.23-.132a1 1 0 01-.372-1.364zm-7 4a1 1 0 011.364-.372L10 8.848l1.254-.716a1 1 0 11.992 1.736L11 10.723V12a1 1 0 11-2 0v-1.277l-1.246-.855a1 1 0 01-.372-1.364zM3 11a1 1 0 011 1v1.277l1.246.855a1 1 0 01-.372 1.364l-1.75-1A.996.996 0 013 14v-2a1 1 0 011-1zm14 0a1 1 0 011 1v2a.996.996 0 01-.52.878l-1.75 1a1 1 0 11-.992-1.736L16 14.277V12a1 1 0 011-1zm-9.618 4.504a1 1 0 01.372-1.364L9 13.848l1.254.716a1 1 0 11-.992 1.736l-1.75-1a1 1 0 01-.372-1.364z" clip-rule="evenodd" />
                          </svg>
                        </div>
                      </div>
                      <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">
                          <%= event.event_type.humanize %>
                        </p>
                        <p class="text-xs text-gray-500">
                          <% if event.document.present? %>
                            <%= event.document.display_name %>
                          <% elsif event.deleted_document.present? %>
                            <%= event.deleted_document.display_name %> (deleted)
                          <% else %>
                            Unknown Document
                          <% end %> • 
                          <%= event.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                        </p>
                      </div>
                    </div>
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900">
                        $<%= sprintf("%.4f", event.cost_cents / 100.0) %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= event.model %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-4">No AI actions performed yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>