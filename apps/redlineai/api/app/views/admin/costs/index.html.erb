<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Cost Analytics</h1>
        <p class="text-gray-600 dark:text-gray-400">Track AI provider costs and usage</p>
      </div>
      <%= link_to "â† Back to Dashboard", admin_dashboard_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" %>
    </div>
  </div>

  <!-- Cost Summary -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total AI Costs</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white">$<%= sprintf('%.2f', @ai_cost_cents / 100.0) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-600 dark:text-orange-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Deleted Doc Costs</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white">$<%= sprintf('%.2f', @deleted_docs_cost_cents / 100.0) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Costs</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white">$<%= sprintf('%.2f', @total_cost_cents / 100.0) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Cost Breakdown -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- AI Events Costs -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">AI Events Costs</h2>
      <div class="space-y-4">
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Total AI Events</span>
          <span class="text-sm text-gray-900 dark:text-white"><%= number_with_delimiter(@total_ai_events) %></span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Total Tokens Used</span>
          <span class="text-sm text-gray-900 dark:text-white"><%= number_with_delimiter(@total_tokens_used) %></span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Average Cost per Event</span>
          <span class="text-sm text-gray-900 dark:text-white">
            $<%= sprintf('%.4f', @average_cost_per_event) %>
          </span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Average Tokens per Event</span>
          <span class="text-sm text-gray-900 dark:text-white">
            <%= number_with_delimiter(@average_tokens_per_event) %>
          </span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Cache Hit Rate</span>
          <span class="text-sm text-gray-900 dark:text-white"><%= @cache_hit_rate %>%</span>
        </div>
      </div>
    </div>

    <!-- Deleted Documents Costs -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Deleted Documents Costs</h2>
      <div class="space-y-4">
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Total Deleted Docs</span>
          <span class="text-sm text-gray-900 dark:text-white"><%= DeletedDocument.count %></span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Total Tokens Used</span>
          <span class="text-sm text-gray-900 dark:text-white"><%= DeletedDocument.sum(:total_tokens_used) %></span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Average Cost per Doc</span>
          <span class="text-sm text-gray-900 dark:text-white">
            $<%= DeletedDocument.count > 0 ? sprintf('%.4f', @deleted_docs_cost_cents / 100.0 / DeletedDocument.count) : '0.00' %>
          </span>
        </div>
        <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Average Tokens per Doc</span>
          <span class="text-sm text-gray-900 dark:text-white">
            <%= DeletedDocument.count > 0 ? (DeletedDocument.sum(:total_tokens_used).to_f / DeletedDocument.count).round(0) : 0 %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Cost Analytics -->
  <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Monthly Cost Trends -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Monthly Cost Trends</h2>
      <div class="space-y-3">
        <% @monthly_costs.each do |month, cost| %>
          <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
              <%= month.strftime('%B %Y') %>
            </span>
            <span class="text-sm font-semibold text-gray-900 dark:text-white">
              $<%= sprintf('%.2f', cost) %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Model Usage Analysis -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Model Usage Analysis</h2>
      <div class="space-y-3">
        <% @costs_by_model.each do |model, cost| %>
          <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
              <%= model %>
            </span>
            <span class="text-sm font-semibold text-gray-900 dark:text-white">
              $<%= sprintf('%.2f', cost) %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- User Cost Distribution -->
  <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Top Users by Cost</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Total Cost</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-600">
          <% @top_users_by_cost.each do |user| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                <%= user.display_name || 'Unknown' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 dark:text-white">
                $<%= sprintf('%.2f', user.total_cost_cents / 100.0) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= link_to "View Details", admin_user_path(user), class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent High-Cost Events -->
  <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Recent High-Cost Events</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Document</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Event Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Cost</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Tokens</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-600">
          <% @recent_high_cost_events.each do |event| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <%= event.created_at.strftime('%Y-%m-%d %H:%M') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= event.user&.email || 'Anonymous' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                <% if event.document.present? %>
                  <%= link_to event.document.title, admin_document_path(event.document), class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
                <% else %>
                  <span class="text-gray-400 dark:text-gray-500">Unknown</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= event.event_type.titleize %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= event.model %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-red-600 dark:text-red-400">
                $<%= sprintf('%.2f', event.cost_cents / 100.0) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= number_with_delimiter(event.tokens_used) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Cache Performance Metrics -->
  <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Cache Performance</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center p-4 bg-green-50 dark:bg-green-900/20 rounded-lg">
        <p class="text-sm font-medium text-green-600 dark:text-green-400 mb-1">Cache Hit Rate</p>
        <p class="text-2xl font-semibold text-green-900 dark:text-green-100"><%= @cache_hit_rate %>%</p>
      </div>
      <div class="text-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
        <p class="text-sm font-medium text-blue-600 dark:text-blue-400 mb-1">Cache Hits</p>
        <p class="text-2xl font-semibold text-blue-900 dark:text-blue-100"><%= @cache_hits %></p>
      </div>
      <div class="text-center p-4 bg-orange-50 dark:bg-orange-900/20 rounded-lg">
        <p class="text-sm font-medium text-orange-600 dark:text-orange-400 mb-1">Cache Misses</p>
        <p class="text-2xl font-semibold text-orange-900 dark:text-orange-100"><%= @cache_misses %></p>
      </div>
    </div>
  </div>
</div>
