<div class="bg-white dark:bg-gray-900">
  <div class="py-6 sm:px-6 lg:px-8 flex-1">
    <div class="px-4 py-6 sm:px-0">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">AI Analysis Results</h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Analysis for <%= @document.title %>
            </p>
          </div>
          <div class="flex-shrink-0">
            <%= link_to @document,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800 transition-all duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Document
            <% end %>
          </div>
        </div>
      </div>

      <!-- AI Results -->
      <div class="bg-white dark:bg-gray-800/95 border border-gray-200 dark:border-gray-600 rounded-xl p-6 shadow-sm dark:shadow-gray-900/50" style="--light-bg: #ffffff; --dark-bg: #1f2937; --light-border: #e5e7eb; --dark-border: #4b5563;">
        <% if @cached %>
          <div class="mb-4 p-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg flex items-center">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-300 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm text-blue-700 dark:text-blue-100">This analysis was retrieved from cache (faster response)</span>
          </div>
        <% end %>

        <% if @ai_result %>
          <% if @ai_result['summary'] %>
            <!-- Summary Section -->
            <div class="mb-8 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-600">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                </svg>
                Summary
              </h2>
              <div class="prose max-w-none dark:prose-invert">
                <p class="text-gray-700 dark:text-gray-200 leading-relaxed"><%= simple_format(@ai_result['summary']) %></p>
              </div>
            </div>
          <% end %>

          <% if @ai_result['answer'] %>
            <!-- Answer Section -->
            <div class="mb-8 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-600">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
                Answer
              </h2>
              <div class="prose max-w-none dark:prose-invert">
                <p class="text-gray-700 dark:text-gray-200 leading-relaxed"><%= simple_format(@ai_result['answer']) %></p>
              </div>
              <% if @ai_result['confidence'] %>
                <div class="mt-4">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-200 border border-blue-200 dark:border-blue-600 shadow-sm">
                    <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Confidence: <%= (@ai_result['confidence'] * 100).round %>%
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @ai_result['top_risks'] && @ai_result['top_risks'].any? %>
            <!-- Risks Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                Top Risks
              </h2>
              <div class="space-y-4">
                <% @ai_result['top_risks'].each do |risk| %>
                  <div class="border-l-4 <%= risk['severity'] == 'critical' ? 'border-red-500 bg-red-50 dark:bg-red-900/30' : risk['severity'] == 'high' ? 'border-orange-500 bg-orange-50 dark:bg-orange-900/30' : risk['severity'] == 'medium' ? 'border-yellow-500 bg-yellow-50 dark:bg-yellow-900/30' : 'border-green-500 bg-green-50 dark:bg-green-900/30' %> p-4 rounded-r-lg shadow-sm">
                    <div class="flex items-center">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-white"><%= risk['risk'] %></h3>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= risk['severity'] == 'critical' ? 'bg-red-100 dark:bg-red-800 text-red-800 dark:text-red-100 border border-red-200 dark:border-red-600' : risk['severity'] == 'high' ? 'bg-orange-100 dark:bg-orange-800 text-orange-800 dark:text-orange-100 border border-orange-200 dark:border-orange-600' : risk['severity'] == 'medium' ? 'bg-yellow-100 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-100 border border-yellow-200 dark:border-yellow-600' : 'bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-100 border border-green-200 dark:border-green-600' %>">
                        <%= risk['severity'].titleize %>
                      </span>
                    </div>
                    <p class="mt-2 text-gray-700 dark:text-gray-200 leading-relaxed"><%= risk['description'] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @ai_result['edits'] && @ai_result['edits'].any? %>
            <!-- Redlines Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <svg class="w-5 h-5 text-purple-600 dark:text-purple-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
                Proposed Redlines
              </h2>
              <div class="space-y-4">
                <% @ai_result['edits'].each_with_index do |edit, index| %>
                  <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-4 bg-gray-50 dark:bg-gray-700/60 shadow-sm hover:shadow-md dark:hover:shadow-gray-900/30 transition-shadow duration-200">
                    <div class="flex items-center justify-between mb-3">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-white">Edit #<%= index + 1 %></h3>
                      <div class="flex items-center space-x-2">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-800 text-blue-800 dark:text-blue-100 border border-blue-200 dark:border-blue-600">
                          <%= edit['type'].titleize %>
                        </span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= edit['severity'] == 'high' ? 'bg-red-100 dark:bg-red-800 text-red-800 dark:text-red-100 border border-red-200 dark:border-red-600' : edit['severity'] == 'medium' ? 'bg-yellow-100 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-100 border border-yellow-200 dark:border-yellow-600' : 'bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-100 border border-green-200 dark:border-green-600' %>">
                          <%= edit['severity'].titleize %>
                        </span>
                      </div>
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 flex items-center">
                      <svg class="w-4 h-4 mr-1.5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                      </svg>
                      <strong>Location:</strong> <%= edit['location'] %>
                    </p>
                    <% if edit['current_text'] %>
                      <div class="mb-3">
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center">
                          <svg class="w-4 h-4 mr-1.5 text-red-500 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                          </svg>
                          Current text:
                        </p>
                        <p class="text-sm text-gray-800 dark:text-white bg-red-50 dark:bg-red-900 p-3 rounded border border-red-200 dark:border-red-700 font-mono"><%= edit['current_text'] %></p>
                      </div>
                    <% end %>
                    <% if edit['suggested_text'] %>
                      <div class="mb-3">
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center">
                          <svg class="w-4 h-4 mr-1.5 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                          </svg>
                          Suggested text:
                        </p>
                        <p class="text-sm text-gray-800 dark:text-white bg-green-50 dark:bg-green-900 p-3 rounded border border-green-200 dark:border-green-700 font-mono"><%= edit['suggested_text'] %></p>
                      </div>
                    <% end %>
                    <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900 rounded border border-blue-200 dark:border-blue-700">
                      <p class="text-sm text-gray-800 dark:text-white">
                        <strong class="text-blue-800 dark:text-blue-200">Reason:</strong>
                        <span class="ml-1"><%= edit['reason'] %></span>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @ai_result['citations'] && @ai_result['citations'].any? %>
            <!-- Citations Section -->
            <div class="mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Citations
              </h2>
              <div class="space-y-2">
                <% @ai_result['citations'].each_with_index do |citation, index| %>
                  <div class="bg-gray-50 dark:bg-gray-700/60 p-3 rounded-lg border border-gray-200 dark:border-gray-600 shadow-sm hover:shadow-md dark:hover:shadow-gray-900/30 transition-shadow duration-200">
                    <p class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
                      <strong class="text-gray-900 dark:text-white">[<%= index + 1 %>]</strong>
                      <span class="italic">"<%= citation['quote'] %>"</span>
                      <span class="text-xs text-gray-500 dark:text-gray-500 ml-2">(Chunk <%= citation['chunk_id'] %>)</span>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-gray-500 dark:text-gray-400">No AI analysis results available.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
/* Force dark theme for AI results page */
.dark .bg-white {
  background-color: #1f2937 !important; /* gray-800 */
}

.dark .border-gray-200 {
  border-color: #4b5563 !important; /* gray-600 */
}

.dark .bg-gray-50 {
  background-color: #111827 !important; /* gray-900 */
}

.dark .bg-red-50 {
  background-color: #7f1d1d !important; /* red-900 */
}

.dark .bg-green-50 {
  background-color: #14532d !important; /* green-900 */
}

.dark .bg-blue-50 {
  background-color: #1e3a8a !important; /* blue-900 */
}

.dark .text-gray-800 {
  color: #f9fafb !important; /* gray-100 */
}

.dark .text-gray-700 {
  color: #d1d5db !important; /* gray-300 */
}

.dark .text-gray-600 {
  color: #9ca3af !important; /* gray-400 */
}

.dark .text-gray-900 {
  color: #ffffff !important; /* white */
}

/* Specific override for cache notice text in dark mode */
.dark .bg-blue-50 .text-blue-700 {
  color: #dbeafe !important; /* blue-100 - very light blue */
}

.dark .bg-blue-900\/20 .text-blue-700 {
  color: #dbeafe !important; /* blue-100 - very light blue */
}
</style>

<script>
// Ensure dark theme is properly applied
document.addEventListener('DOMContentLoaded', function() {
  // Check if dark theme should be applied
  const savedTheme = localStorage.getItem('theme');
  const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

  if (savedTheme === 'dark' || (savedTheme === 'auto' && prefersDark)) {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }

  // Force refresh if needed
  if (document.documentElement.classList.contains('dark')) {
    // Force a repaint to ensure CSS is applied
    document.body.offsetHeight;
  }
});

// Also listen for theme changes
window.addEventListener('storage', function(e) {
  if (e.key === 'theme') {
    const savedTheme = e.newValue;
    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

    if (savedTheme === 'dark' || (savedTheme === 'auto' && prefersDark)) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }
});
</script>