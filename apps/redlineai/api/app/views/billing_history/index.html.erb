<div class="min-h-screen bg-gray-50 py-8 bg-white dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Billing History</h1>
          <p class="mt-2 text-gray-600 dark:text-gray-300">Track your AI usage costs and billing details</p>
        </div>
        <%= link_to "← Back to Subscription", subscription_path,
            class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200" %>
      </div>
    </div>

    <!-- Current Plan Info -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Current Plan</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
          <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @subscription.plan.titleize %></div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Plan</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
          <div class="text-2xl font-bold text-gray-900 dark:text-white">$<%= @subscription.price %></div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Monthly Cost</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
          <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @subscription.status.titleize %></div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Status</div>
        </div>
      </div>
    </div>

    <!-- Cost Summary -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Cost Summary</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-200 dark:border-blue-700">
          <div class="text-2xl font-bold text-blue-900 dark:text-blue-100">$<%= '%.4f' % @total_ai_costs %></div>
          <div class="text-sm text-blue-700 dark:text-blue-300">AI Processing Costs</div>
        </div>
        <div class="bg-orange-50 dark:bg-orange-900/20 rounded-lg p-4 border border-orange-200 dark:border-orange-700">
          <div class="text-2xl font-bold text-orange-900 dark:text-orange-100">$<%= '%.4f' % @total_deletion_costs %></div>
          <div class="text-sm text-orange-700 dark:text-orange-300">Document Deletion Costs</div>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4 border border-green-200 dark:border-green-700">
          <div class="text-2xl font-bold text-green-900 dark:text-green-100">$<%= '%.4f' % @total_costs %></div>
          <div class="text-sm text-green-700 dark:text-green-300">Total Costs</div>
        </div>
      </div>
    </div>

    <!-- Monthly Cost Breakdown -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Monthly Cost Breakdown</h2>
      <% if @monthly_costs.any? %>
        <div class="space-y-4">
          <% @monthly_costs.each do |month, costs| %>
            <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                  <%= month.strftime("%B %Y") %>
                </h3>
                <div class="text-xl font-bold text-gray-900 dark:text-white">
                  $<%= '%.4f' % costs[:total] %>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div class="text-gray-600 dark:text-gray-400">
                  AI Processing: <span class="font-medium text-gray-900 dark:text-white">$<%= '%.4f' % costs[:ai_costs] %></span>
                </div>
                <div class="text-gray-600 dark:text-gray-400">
                  Document Deletion: <span class="font-medium text-gray-900 dark:text-white">$<%= '%.4f' % costs[:deletion_costs] %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600 dark:text-gray-400 text-center py-8">No billing data available yet.</p>
      <% end %>
    </div>

    <!-- Recent AI Events -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Recent AI Processing Events</h2>
      <% if @ai_events.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Document</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Action</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Cost</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @ai_events.each do |event| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= event.created_at.strftime("%b %d, %Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= event.document&.title || event.document_title || "Unknown Document" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= event.event_type&.titleize || "Unknown" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    $<%= '%.4f' % event.cost_dollars %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-600 dark:text-gray-400 text-center py-8">No AI processing events found.</p>
      <% end %>
    </div>

    <!-- Recent Deleted Documents -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Recent Document Deletions</h2>
      <% if @deleted_documents.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Document</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">AI Events</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Cost</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @deleted_documents.each do |doc| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= doc.created_at.strftime("%b %d, %Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= doc.title || "Unknown Document" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= doc.ai_events_count %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    $<%= '%.4f' % doc.total_cost_dollars %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-600 dark:text-gray-400 text-center py-8">No deleted documents found.</p>
      <% end %>
    </div>
  </div>
</div>
