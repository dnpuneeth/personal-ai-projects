<div class="flex <%= message.user_message? ? 'justify-end' : 'justify-start' %> mb-4">
  <div class="max-w-2xl">
    <!-- Message Bubble -->
    <div class="px-6 py-4 rounded-2xl shadow-sm <%= message.user_message? ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white' : 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white border border-gray-100 dark:border-gray-600' %>">
      <p class="text-sm leading-relaxed"><%= simple_format(message.content) %></p>

      <!-- Message Metadata -->
      <div class="mt-3 flex items-center justify-between text-xs opacity-80">
        <span class="<%= message.user_message? ? 'text-blue-100' : 'text-gray-500 dark:text-gray-400' %>">
          <%= message.display_time %>
        </span>
        <div class="flex items-center space-x-2">
          <% if message.assistant_message? && message.has_confidence? %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-800 text-blue-800 dark:text-blue-100">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <%= (message.confidence * 100).round %>%
            </span>
          <% end %>

          <% if message.assistant_message? && message.cached? %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-100">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H8a1 1 0 01-1-1zm0 3a1 1 0 011-1h6a1 1 0 110 2H8a1 1 0 01-1-1z" clip-rule="evenodd" />
              </svg>
              Cached
            </span>
          <% end %>
        </div>
      </div>
    </div>



    <!-- Cost info for AI messages -->
    <% if message.assistant_message? && message.cost_cents > 0 %>
      <div class="mt-2 ml-4 text-xs text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 rounded-lg px-3 py-2 border border-gray-200 dark:border-gray-600">
        Cost: $<%= sprintf('%.4f', message.cost_dollars) %> • Tokens: <%= message.tokens_used %>
        <% if message.tokens_used < 2000 %>
          <span class="text-green-600 dark:text-green-400 ml-2">✓ Optimized</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
