<div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8 transition-colors duration-200">
  <div class="max-w-md w-full space-y-8">
    <div>
      <div class="mx-auto h-12 w-auto text-center">
        <span class="text-3xl font-bold">
          <span class="text-blue-600 dark:text-blue-400">Redline</span>AI
        </span>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        Get unlimited document uploads and AI analysis
      </p>
    </div>

    <div class="mt-8">
      <!-- Google OAuth Button (always show for demo) -->
      <% if true || (ENV['GOOGLE_CLIENT_ID'].present? && ENV['GOOGLE_CLIENT_SECRET'].present?) %>
        <%= link_to user_google_oauth2_omniauth_authorize_path,
            method: :post,
            class: "group relative w-full flex justify-center py-3 px-4 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900 mb-6 cursor-pointer transition-colors duration-200" do %>
          <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        <% end %>

        <div class="relative mb-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300 dark:border-gray-600" />
          </div>
        </div>
      <% end %>

      <!-- Email/Password Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                   html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "Email address",
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white bg-white dark:bg-gray-800 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-400 dark:focus:border-blue-400 sm:text-sm transition-colors duration-200" %>
        </div>

        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "Password",
              class: "appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white bg-white dark:bg-gray-800 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-400 dark:focus:border-blue-400 sm:text-sm transition-colors duration-200" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center relative">
              <!-- Hidden checkbox for form submission -->
              <%= f.check_box :remember_me,
                  class: "sr-only",
                  id: "remember_me_checkbox" %>

              <!-- Custom clickable checkbox -->
              <div id="custom_checkbox"
                   class="h-4 w-4 border-2 border-gray-300 dark:border-gray-600 rounded cursor-pointer bg-white dark:bg-gray-800 transition-all duration-200 flex items-center justify-center"
                   onclick="toggleRememberMe()">
                <svg id="checkmark" class="w-3 h-3 text-blue-600 dark:text-blue-400 hidden" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>

              <!-- Clickable label -->
              <label for="custom_checkbox"
                     class="ml-2 block text-sm text-gray-900 dark:text-gray-300 cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition-colors duration-200"
                     onclick="toggleRememberMe()">
                Remember me for 2 weeks
              </label>
            </div>

            <div class="text-sm relative z-10">
              <%= link_to "Forgot password?", new_user_password_path,
                  class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 cursor-pointer relative z-10 transition-colors duration-200",
                  data: { turbo: false } %>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in",
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900 cursor-pointer transition-colors duration-200" %>
        </div>
      <% end %>

      <div class="text-center mt-6 relative z-10">
        <span class="text-sm text-gray-600 dark:text-gray-400">
          Don't have an account?
        </span>
        <br>
        <%= link_to "Sign up", new_user_registration_path,
            class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 cursor-pointer relative z-10 block mt-1 transition-colors duration-200",
            data: { turbo: false } %>
      </div>

      <!-- Anonymous Usage Info -->
      <div class="mt-6 p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-md transition-colors duration-200">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400 dark:text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
              Try RedlineAI without signing up
            </h3>
            <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
              <p>Anonymous users can upload 1 document and perform 3 AI actions.
                 <%= link_to "Continue without account", root_path,
                     class: "font-medium underline text-yellow-700 dark:text-yellow-300 hover:text-yellow-600 dark:hover:text-yellow-200 transition-colors duration-200" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleRememberMe() {
  const checkbox = document.getElementById('remember_me_checkbox');
  const customCheckbox = document.getElementById('custom_checkbox');
  const checkmark = document.getElementById('checkmark');
  const label = document.querySelector('label[for="custom_checkbox"]');

  if (!checkbox || !customCheckbox || !checkmark || !label) return;

  checkbox.checked = !checkbox.checked;

  if (checkbox.checked) {
    customCheckbox.classList.add('border-blue-500', 'dark:border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    customCheckbox.classList.remove('border-gray-300', 'dark:border-gray-600', 'bg-white', 'dark:bg-gray-800');
    checkmark.classList.remove('hidden');
    label.classList.add('text-blue-600', 'dark:text-blue-400', 'font-medium');
    label.classList.remove('text-gray-900', 'dark:text-gray-300');
  } else {
    customCheckbox.classList.remove('border-blue-500', 'dark:border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    customCheckbox.classList.add('border-gray-300', 'dark:border-gray-600', 'bg-white', 'dark:bg-gray-800');
    checkmark.classList.add('hidden');
    label.classList.remove('text-blue-600', 'dark:text-blue-400', 'font-medium');
    label.classList.add('text-gray-900', 'dark:text-gray-300');
  }

  checkbox.dispatchEvent(new Event('change', { bubbles: true }));
}

document.addEventListener('DOMContentLoaded', function() {
  const rememberCheckbox = document.getElementById('remember_me_checkbox');
  const rememberLabel = document.querySelector('label[for="custom_checkbox"]');
  const customCheckbox = document.getElementById('custom_checkbox');
  const checkmark = document.getElementById('checkmark');

  if (!rememberCheckbox || !rememberLabel || !customCheckbox || !checkmark) return;

  // Ensure elements are clickable
  [rememberLabel, customCheckbox].forEach(el => {
    el.style.pointerEvents = 'auto';
    el.style.userSelect = 'none';
  });

  // Initialize visual state
  if (rememberCheckbox.checked) {
    customCheckbox.classList.add('border-blue-500', 'dark:border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    customCheckbox.classList.remove('border-gray-300', 'dark:border-gray-600', 'bg-white', 'dark:bg-gray-800');
    checkmark.classList.remove('hidden');
    rememberLabel.classList.add('text-blue-600', 'dark:text-blue-400', 'font-medium');
    rememberLabel.classList.remove('text-gray-900', 'dark:text-gray-300');
  } else {
    customCheckbox.classList.remove('border-blue-500', 'dark:border-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
    customCheckbox.classList.add('border-gray-300', 'dark:border-gray-600', 'bg-white', 'dark:bg-gray-800');
    checkmark.classList.add('hidden');
    rememberLabel.classList.remove('text-blue-600', 'dark:text-blue-400', 'font-medium');
    rememberLabel.classList.add('text-gray-900', 'dark:text-gray-300');
  }
});
</script>