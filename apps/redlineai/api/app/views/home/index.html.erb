<!-- Recent Documents Section -->
<div class="bg-white dark:bg-gray-800 py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="flex items-center justify-between">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          <% if user_signed_in? %>Your Recent Documents<% else %>Recent Documents<% end %>
        </h2>
        <%= link_to documents_path, class: "text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500 dark:text-blue-400 dark:hover:text-blue-300" do %>
          View all <span aria-hidden="true">→</span>
        <% end %>
      </div>
      <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-300">
        <% if user_signed_in? %>
          Your latest uploaded and processed documents
        <% else %>
          Latest documents processed by RedlineAI
        <% end %>
      </p>

      <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <% if @recent_documents.any? %>
          <% @recent_documents.each do |document| %>
            <div class="group relative bg-white dark:bg-gray-700 rounded-2xl shadow-sm ring-1 ring-gray-200 dark:ring-gray-600 hover:shadow-lg transition-all duration-300">
              <div class="p-6">
                <div class="flex items-center gap-x-4">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-red-100 dark:bg-red-900 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  </div>
                  <div class="min-w-0 flex-auto">
                    <h3 class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">
                      <%= link_to document.title, document_path(document), class: "hover:text-indigo-600 dark:hover:text-indigo-400" %>
                    </h3>
                    <p class="mt-1 text-xs leading-5 text-gray-500 dark:text-gray-400">
                      <%= time_ago_in_words(document.created_at) %> ago
                    </p>
                  </div>
                </div>
                <div class="mt-4 flex items-center justify-between">
                                          <span class="status-badge status-<%= document.status %>">
                          <%= document.status.titleize %>
                        </span>
                  <% if document.completed? %>
                    <span class="text-xs text-gray-500 dark:text-gray-400">
                      <%= pluralize(document.page_count, 'page') %> • <%= pluralize(document.chunk_count, 'chunk') %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full">
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">
                <% if user_signed_in? %>No documents yet<% else %>Sign in to view your documents<% end %>
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <% if user_signed_in? %>
                  Get started by uploading your first document to begin AI analysis.
                <% else %>
                  Sign in to access your personal document library and AI analysis history.
                <% end %>
              </p>
              <div class="mt-6">
                <% if user_signed_in? %>
                  <%= link_to new_document_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Upload Document
                  <% end %>
                <% else %>
                  <%= link_to new_user_session_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                    Sign In
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes blob {
  0% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
  100% {
    transform: translate(0px, 0px) scale(1);
  }
}
.animate-blob {
  animation: blob 7s infinite;
}
.animation-delay-2000 {
  animation-delay: 2s;
}
.animation-delay-4000 {
  animation-delay: 4s;
}
</style>