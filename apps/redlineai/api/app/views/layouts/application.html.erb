<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>RedlineAI - AI Document Analysis</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "profile_picture", "data-turbo-track": "reload" %>

    <style>
      /* Sticky navbar enhancements */
      .sticky {
        position: -webkit-sticky;
        position: sticky;
      }

      /* Ensure navbar stays above content */
      nav.sticky {
        position: sticky;
        top: 0;
      }

      /* Smooth shadow transition */
      nav.sticky {
        transition: box-shadow 0.2s ease-in-out;
      }

      /* Enhanced shadow on scroll */
      nav.sticky.scrolled {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }

      /* Dark mode shadow */
      .dark nav.sticky.scrolled {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      }
    </style>
  </head>

  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen flex flex-col transition-colors duration-200">
    <!-- Navigation -->
    <nav class="sticky top-0 z-40 bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 transition-colors duration-200 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <%= link_to root_path, class: "text-xl font-bold text-gray-900 dark:text-white hover:opacity-75 transition-opacity duration-200" do %>
                <span class="text-blue-600 dark:text-blue-400">Redline</span>AI
              <% end %>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <% nav_link = ->(label, path) do %>
                <% active = current_page?(path) %>
                <%= link_to label, path, class: [
                  "inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-colors duration-200",
                  active ? "border-blue-600 text-gray-900 dark:text-white" : "border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-200"
                ].join(' ') %>
              <% end %>
              <%= nav_link.call("Documents", documents_path) %>
              <%= nav_link.call("Upload", new_document_path) %>
              <% if user_signed_in? %>
                <%= nav_link.call("Cost", costs_path) %>
                <%= nav_link.call("Subscription", subscription_path) %>
                <% if current_user.admin? %>
                  <%= nav_link.call("Admin", admin_dashboard_path) %>
                <% elsif current_user.email.end_with?('@redlineai.com') || current_user.id == 1 %>
                  <%= nav_link.call("Analytics", analytics_path) %>
                <% end %>
                <%= nav_link.call("Profile", profile_path) %>
              <% end %>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <!-- Theme Toggle -->
            <%= render 'shared/theme_toggle' %>

            <!-- Usage Indicators for Anonymous Users -->
            <% if anonymous_user? %>
              <div class="text-xs text-gray-600 dark:text-gray-400">
                <span class="inline-flex items-center px-2 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">
                  <%= (session[:anonymous_documents_count] || 0) %>/1 uploads left
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 ml-1">
                  <%= (session[:anonymous_ai_actions_count] || 0) %>/3 AI actions left
                </span>
              </div>
            <% end %>

            <!-- Authentication Links -->
            <div class="flex items-center space-x-4">
              <% if user_signed_in? %>
                <div class="flex items-center space-x-3">
                  <% if current_user.has_profile_picture? %>
                    <div class="relative group cursor-pointer" onclick="openProfilePictureModal('<%= current_user.profile_picture.attached? ? url_for(current_user.profile_picture) : current_user.avatar_url %>', '<%= current_user.display_name %>')">
                      <% if current_user.profile_picture.attached? %>
                        <%= image_tag current_user.profile_picture_thumbnail,
                            class: "h-8 w-8 rounded-full cursor-pointer hover:opacity-75 transition-all duration-200 object-cover hover:scale-110",
                            alt: current_user.display_name %>
                      <% else %>
                        <img class="h-8 w-8 rounded-full cursor-pointer hover:opacity-75 transition-all duration-200 object-cover hover:scale-110"
                             src="<%= current_user.avatar_url %>"
                             alt="<%= current_user.display_name %>">
                      <% end %>

                    </div>
                  <% end %>
                  <%= link_to profile_path, class: "text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white cursor-pointer transition-colors duration-200" do %>
                    <%= current_user.display_name %>
                  <% end %>
                  <%= button_to "Sign out", destroy_user_session_path,
                      method: :delete,
                      class: "text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 cursor-pointer bg-transparent border-0 p-0 font-normal transition-colors duration-200",
                      form_class: "inline" %>
                </div>
              <% else %>
                <div class="flex items-center space-x-3">
                  <%= link_to "Sign in", new_user_session_path,
                      class: "text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors duration-200" %>
                  <%= link_to "Sign up", new_user_registration_path,
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-400 px-4 py-3 rounded relative mb-4 transition-colors duration-200" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded relative mb-4 transition-colors duration-200" role="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 flex-1">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-12 transition-colors duration-200">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <div class="text-center text-sm text-gray-500 dark:text-gray-400">
          <p>&copy; 2025 RedlineAI. AI-powered document analysis platform.</p>
        </div>
      </div>
    </footer>

    <!-- Profile Picture Modal -->
    <div id="profile-picture-modal" class="fixed inset-0 bg-black bg-opacity-75 hidden z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg max-w-2xl w-full max-h-full overflow-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="modal-title">Profile Picture</h3>
            <button type="button"
                    onclick="closeProfilePictureModal()"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div class="text-center">
            <img id="modal-image" src="" alt="" class="max-w-full h-auto rounded-lg mx-auto">
          </div>
        </div>
      </div>
    </div>

    <script>
      // Enhanced sticky navbar with scroll effects
      document.addEventListener('DOMContentLoaded', function() {
        const navbar = document.querySelector('nav.sticky');

        if (navbar) {
          // Add scroll effect
          window.addEventListener('scroll', function() {
            if (window.scrollY > 10) {
              navbar.classList.add('scrolled');
            } else {
              navbar.classList.remove('scrolled');
            }
          });

          // Ensure navbar is properly positioned
          navbar.style.position = 'sticky';
          navbar.style.top = '0';
          navbar.style.zIndex = '40';
        }
      });

                  // Global chat scroll functionality that persists across Turbo navigation
      function initializeChatScroll() {
        const messagesContainer = document.getElementById('messages-container');
        if (messagesContainer) {
          // Check if we're already at the bottom to prevent unnecessary scrolling
          const isAtBottom = messagesContainer.scrollTop + messagesContainer.clientHeight >= messagesContainer.scrollHeight - 10;
          
          if (!isAtBottom) {
            // Use smooth scrolling for better UX
            messagesContainer.scrollTo({
              top: messagesContainer.scrollHeight,
              behavior: 'smooth'
            });
          }
          
          // Single additional scroll attempt for reliability
          setTimeout(() => {
            if (messagesContainer) {
              const stillNotAtBottom = messagesContainer.scrollTop + messagesContainer.clientHeight < messagesContainer.scrollHeight - 10;
              if (stillNotAtBottom) {
                messagesContainer.scrollTo({
                  top: messagesContainer.scrollHeight,
                  behavior: 'smooth'
                });
              }
            }
          }, 200);
        }
      }

      // Listen for Turbo navigation events
      document.addEventListener('turbo:load', initializeChatScroll);
      document.addEventListener('turbo:render', initializeChatScroll);
      document.addEventListener('turbo:after-render', initializeChatScroll);

      // Also listen for regular page events
      document.addEventListener('DOMContentLoaded', initializeChatScroll);
      window.addEventListener('load', initializeChatScroll);

            // Check if we're on a chat page and scroll
      function checkChatPage() {
        if (window.location.pathname.includes('/chat')) {
          setTimeout(initializeChatScroll, 100);
        }
      }
      // Check immediately and once more after delay
      checkChatPage();
      setTimeout(checkChatPage, 1000);
    </script>
  </body>
</html>