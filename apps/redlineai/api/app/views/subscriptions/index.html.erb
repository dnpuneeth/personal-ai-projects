<div class="min-h-screen bg-gray-50 py-8 bg-white dark:bg-gray-800 subscription-page">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Subscription & Billing</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">Manage your subscription and view usage</p>
    </div>

    <!-- Current Plan Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Current Plan</h2>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            <%= @subscription.plan.titleize %> Plan
            <% if @subscription.paid? %>
              - $<%= @subscription.price %>/month
            <% else %>
              - Free
            <% end %>
          </p>
        </div>
        <div class="text-right">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= @subscription.active? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' %>">
            <%= @subscription.status.titleize %>
          </span>
        </div>
      </div>

      <!-- Usage Stats -->
      <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 dark:bg-gray-700">
          <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @subscription.monthly_limit %></div>
          <div class="text-sm text-gray-600 dark:text-gray-300">Monthly Limit</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 dark:bg-gray-700">
          <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @documents_used %></div>
          <div class="text-sm text-gray-600 dark:text-gray-300">Used This Month</div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 dark:bg-gray-700">
          <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @documents_remaining %></div>
          <div class="text-sm text-gray-600 dark:text-gray-300">Remaining</div>
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="mt-4">
        <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300 mb-2">
          <span>Usage</span>
          <span><%= @documents_used %> / <%= @subscription.monthly_limit %></span>
        </div>
        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 dark:bg-gray-700">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
               style="width: <%= @subscription.monthly_limit == Float::INFINITY ? 0 : [(@documents_used.to_f / @subscription.monthly_limit * 100), 100].min %>%"></div>
        </div>
      </div>
    </div>

    <!-- Plan Features -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Your Plan Features</h3>
      <ul class="space-y-3">
        <% @subscription.features.each do |feature| %>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-700 dark:text-gray-300"><%= feature %></span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Upgrade Options -->
    <% unless @subscription.plan == 'enterprise' %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Upgrade Your Plan</h3>

        <div class="grid md:grid-cols-2 gap-6">
          <!-- Pro Plan -->
          <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-6 bg-white dark:bg-gray-800 dark:border-gray-600 <%= @subscription.plan == 'pro' ? 'ring-2 ring-blue-500 bg-blue-50 dark:bg-blue-900/20' : '' %>">
            <div class="text-center mb-4">
              <h4 class="text-xl font-semibold text-gray-900 dark:text-white">Pro Plan</h4>
              <div class="text-3xl font-bold text-gray-900 dark:text-white mt-2">$29<span class="text-lg text-gray-600 dark:text-gray-400">/month</span></div>
            </div>

            <ul class="space-y-2 mb-6">
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                100 documents per month
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Advanced AI analysis
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Priority support
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Cost analytics
              </li>
            </ul>

            <% if @subscription.plan == 'pro' %>
              <button class="w-full bg-gray-300 text-gray-700 py-2 px-4 rounded-lg font-medium cursor-not-allowed" disabled>
                Current Plan
              </button>
            <% else %>
              <%= link_to "Upgrade to Pro", upgrade_subscription_path(plan: 'pro'),
                  method: :patch,
                  class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors duration-200 block text-center",
                  data: { confirm: 'Are you sure you want to upgrade to Pro plan?' } %>
            <% end %>
          </div>

          <!-- Enterprise Plan -->
          <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-6 bg-white dark:bg-gray-800 dark:border-gray-600">
            <div class="text-center mb-4">
              <h4 class="text-xl font-semibold text-gray-900 dark:text-white">Enterprise</h4>
              <div class="text-3xl font-bold text-gray-900 dark:text-white mt-2">Custom<span class="text-lg text-gray-600 dark:text-gray-400">/month</span></div>
            </div>

            <ul class="space-y-2 mb-6">
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Unlimited documents
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Custom AI models
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Dedicated support
              </li>
              <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                API access
              </li>
            </ul>

            <a href="mailto:enterprise@redlineai.com?subject=Enterprise%20Plan%20Inquiry"
               class="w-full bg-gray-900 dark:bg-gray-700 text-white py-2 px-4 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-600 transition-colors duration-200 block text-center">
              Contact Sales
            </a>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Referral Program -->
    <div class="bg-gradient-to-r from-purple-50 to-blue-50 dark:from-purple-900/20 dark:to-blue-900/20 rounded-lg border border-purple-200 dark:border-purple-700 p-6 mb-8 dark:from-purple-900/20 dark:to-blue-900/20">
      <div class="text-center mb-6">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">🎉 Refer Friends, Get Rewards!</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Share RedlineAI with your colleagues and get 5 bonus documents for each successful referral!
        </p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg p-4 mb-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-900 dark:text-white">Your Referral Link</p>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Share this link with friends</p>
          </div>
          <button onclick="copyReferralLink()" class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition-colors">
            Copy Link
          </button>
        </div>
        <div class="mt-2 p-2 bg-gray-50 dark:bg-gray-700 rounded border text-sm font-mono text-gray-700 dark:text-gray-300 break-all dark:bg-gray-700">
          <%= root_url %>?ref=<%= current_user.id %>
        </div>
      </div>

      <div class="text-center">
        <p class="text-sm text-gray-600 dark:text-gray-300">
          When someone signs up using your link, you'll both get 5 bonus documents!
        </p>
      </div>
    </div>

    <!-- Subscription Actions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Subscription Management</h3>

      <div class="flex flex-col sm:flex-row gap-4">
        <% if @subscription.active? && @subscription.paid? %>
          <%= link_to "Cancel Subscription", cancel_subscription_path,
              method: :patch,
              class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 text-center",
              data: { confirm: 'Are you sure you want to cancel your subscription? You can reactivate it anytime.' } %>
        <% elsif @subscription.status == 'canceled' %>
          <%= link_to "Reactivate Subscription", reactivate_subscription_path,
              method: :patch,
              class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200 text-center" %>
        <% end %>

        <%= link_to "View Billing History", "#",
            class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200 text-center" %>
      </div>
    </div>

    <script>
      function copyReferralLink() {
        const link = '<%= root_url %>?ref=<%= current_user.id %>';
        navigator.clipboard.writeText(link).then(() => {
          // Show success message
          const button = event.target;
          const originalText = button.textContent;
          button.textContent = 'Copied!';
          button.classList.add('bg-green-600');
          setTimeout(() => {
            button.textContent = originalText;
            button.classList.remove('bg-green-600');
          }, 2000);
        });
      }
    </script>
  </div>
</div>
