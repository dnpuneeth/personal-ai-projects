<div class="min-h-screen bg-gray-50 py-8 bg-white dark:bg-gray-800 subscription-page">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Reactivate Subscription</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">Welcome back! Reactivate your subscription to continue enjoying premium features.</p>
    </div>

    <!-- Current Plan Info -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-8 mb-8">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">
          Reactivate: <%= @subscription.plan.titleize %> Plan
        </h2>
        <div class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
          $<%= @subscription.price %><span class="text-lg text-gray-600 dark:text-gray-400">/month</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400">
          Current Status: <span class="font-medium text-red-600 dark:text-red-400"><%= @subscription.status.titleize %></span>
        </p>
      </div>

      <!-- What You'll Get Back -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">What you'll get back:</h3>
        <ul class="space-y-3">
          <li class="flex items-start text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Full access to premium features immediately
          </li>
          <li class="flex items-start text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Your previous document limits restored
          </li>
          <li class="flex items-start text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Advanced AI features and priority support
          </li>
          <li class="flex items-start text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Billing resumes from today
          </li>
          <li class="flex items-start text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            All your existing documents and data preserved
          </li>
        </ul>
      </div>

      <!-- Action Buttons -->
      <div class="flex space-x-4">
        <%= link_to "Cancel", subscription_path,
            class: "flex-1 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300 py-3 px-6 rounded-lg font-medium hover:bg-gray-400 dark:hover:bg-gray-500 transition-colors duration-200 text-center" %>

        <%= form_tag reactivate_subscription_path, method: :patch, class: "flex-1" do %>
          <%= submit_tag "Reactivate Subscription",
              class: "w-full bg-green-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-green-700 transition-colors duration-200 cursor-pointer",
              data: { confirm: "Are you sure you want to reactivate your subscription? Billing will resume immediately." } %>
        <% end %>
      </div>
    </div>

    <!-- Plan Details -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 text-center">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Your <%= @subscription.plan.titleize %> Plan Includes:</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600 dark:text-gray-400">
        <% if @subscription.plan == 'pro' %>
          <div>• 1,000 documents per month</div>
          <div>• Advanced AI analysis</div>
          <div>• Full API access</div>
          <div>• Priority support</div>
          <div>• Cost analytics</div>
          <div>• No RedlineAI branding</div>
        <% else %>
          <div>• Unlimited documents</div>
          <div>• Custom AI models</div>
          <div>• Dedicated support</div>
          <div>• API access</div>
          <div>• Remove branding</div>
          <div>• Enterprise features</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
