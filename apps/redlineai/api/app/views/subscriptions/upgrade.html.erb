<div class="min-h-screen bg-gray-50 py-8 bg-white dark:bg-gray-800 subscription-page">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Upgrade to <%= @plan.titleize %> Plan</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">Confirm your plan upgrade</p>
    </div>

    <!-- Plan Details Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-8 mb-8">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2"><%= @plan.titleize %> Plan</h2>
        <div class="text-4xl font-bold text-gray-900 dark:text-white mb-2">
          <% if @plan == 'pro' %>
            $10.99<span class="text-lg text-gray-600 dark:text-gray-400">/month</span>
          <% else %>
            $30.99<span class="text-lg text-gray-600 dark:text-gray-400">/month</span>
          <% end %>
        </div>
        <p class="text-gray-600 dark:text-gray-400">
          <% if @plan == 'pro' %>
            For ambitious professionals
          <% else %>
            For top performer businesses
          <% end %>
        </p>
      </div>

      <!-- Plan Features -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Plan Features</h3>
        <ul class="space-y-3">
          <% if @plan == 'pro' %>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              1,000 documents per month
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Advanced AI analysis
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Full API access
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Priority support
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Cost analytics
            </li>
          <% else %>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Unlimited documents
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Custom AI models
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Dedicated support
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              API access
            </li>
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Remove branding
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Action Buttons -->
      <div class="flex space-x-4">
        <%= link_to "Cancel", subscription_path,
            class: "flex-1 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-300 py-3 px-6 rounded-lg font-medium hover:bg-gray-400 dark:hover:bg-gray-500 transition-colors duration-200 text-center" %>

        <% if @plan == 'enterprise' %>
          <a href="mailto:enterprise@redlineai.com?subject=Enterprise%20Plan%20Inquiry"
             class="flex-1 bg-gray-900 dark:bg-gray-700 text-white py-3 px-6 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-600 transition-colors duration-200 text-center">
            Contact Sales
          </a>
        <% else %>
          <%= form_tag upgrade_subscription_path, method: :post, class: "flex-1" do %>
            <%= hidden_field_tag :plan, @plan %>
            <%= submit_tag "Confirm Upgrade",
                class: "w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition-colors duration-200 cursor-pointer",
                data: { confirm: "Are you sure you want to upgrade to #{@plan.titleize} plan?" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Current Plan Info -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        You are currently on the <strong><%= current_user.subscription&.plan&.titleize || 'Free' %></strong> plan.
      </p>
    </div>
  </div>
</div>
